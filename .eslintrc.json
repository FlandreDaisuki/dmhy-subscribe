{
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "rules": {
        "no-console": "off",
        "object-curly-spacing": ["error", "always"],
        "arrow-spacing": "error",
        "max-len": "off",
        "space-infix-ops": "error",
        "indent": ["error", 2]
    }
}
